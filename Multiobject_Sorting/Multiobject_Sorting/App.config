<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
    
    <appSettings>
        <!-- 默认HSV参数 -->
        <add key="HSV_HueMin" value="0" />
        <add key="HSV_HueMax" value="180" />
        <add key="HSV_SaturationMin" value="0" />
        <add key="HSV_SaturationMax" value="255" />
        <add key="HSV_ValueMin" value="0" />
        <add key="HSV_ValueMax" value="255" />
        <add key="HSV_MinArea" value="100" />
        <add key="HSV_MaxArea" value="100000" />
        
        <!-- PLC通信设置 -->
        <add key="PLC_Type" value="TCP_IP" />
        <add key="PLC_IPAddress" value="192.168.1.100" />
        <add key="PLC_Port" value="502" />
        <add key="PLC_SlaveID" value="1" />
        <add key="PLC_ComPort" value="COM1" />
        <add key="PLC_BaudRate" value="9600" />
        
        <!-- 相机设置 -->
        <add key="Camera_Device" value="DirectShow" />
        <add key="Camera_Index" value="0" />
        
        <!-- 检测设置 -->
        <add key="Detection_AutoInterval" value="1000" />
        <add key="Detection_HeartbeatInterval" value="5000" />
        
        <!-- 标定文件路径 -->
        <add key="Calibration_DefaultPath" value="calibration.xml" />
    </appSettings>
</configuration>